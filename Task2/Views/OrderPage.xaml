<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Task2.Views.OrderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Task2.ViewModels"
    Title="OrderPage"
    x:DataType="vm:OrderPageVM">
    <VerticalStackLayout>
        <Grid Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label FontSize="Title" Text="Name" />
            <Entry
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="Title"
                Keyboard="Text"
                Text="{Binding Name}" />
            <Label
                Grid.Row="1"
                FontSize="Title"
                Text="Price" />
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="Title"
                Keyboard="Numeric"
                Text="{Binding Price}" />
            

        </Grid>
        <Grid Padding="5" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Command="{Binding OrderChangedCommand}"
                FontSize="Title"
                Text="Ok" />
            <Button
                Grid.Column="1"
                Command="{Binding CancelCommand}"
                FontSize="Title"
                Text="Cancel" />
        </Grid>
        <Button
            BackgroundColor="Red"
            Command="{Binding OrderDeletedCommand}"
            FontSize="Title"
            HorizontalOptions="Fill"
            Text="Delete" />
    </VerticalStackLayout>
</ContentPage>