<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Task2.Views.DateTimePickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Task2.ViewModels"
    Title="DatePickerPage"
    x:DataType="vm:DateTimePickerPageVM">
    <VerticalStackLayout>
        <DatePicker HorizontalOptions="Fill"  Format="dd/MM/yyyy" Date="{Binding Date}"/>
        <TimePicker HorizontalOptions="Fill" Time="{Binding Time}"/>
        <Grid Padding="5" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Command="{Binding SetDateTimeCommand}"
                FontSize="Title"
                Text="Ok" />
            <Button
                Grid.Column="1"
                Command="{Binding CancelCommand}"
                FontSize="Title"
                Text="Cancel" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>